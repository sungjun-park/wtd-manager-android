<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.jaydi.wtd.MainActivity" >

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_main_links"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="@color/pink_red"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_main_loc"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_pink_red"
            android:gravity="center_vertical"
            android:onClick="setLoc"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/none"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_main_cat_a"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_pink_red"
            android:gravity="center_vertical"
            android:onClick="setCatA"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/none"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image_main_refresh"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_pink_red"
            android:clickable="true"
            android:onClick="loadLinks"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_refresh" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image_main_bookmark"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/selector_pink_red"
                android:clickable="true"
                android:onClick="bookmark"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_important" />

            <ImageView
                android:id="@+id/image_main_bookmark_list"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_pink_red"
                android:clickable="true"
                android:onClick="goToBookmark"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_overflow" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>